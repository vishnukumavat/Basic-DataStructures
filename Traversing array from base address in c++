#include<iostream>
using namespace std;
int main()
{
    int array[100] , size;
    int* ptr ;
    cout<<"Enter the size of array : ";
    cin>>size;
    cout<<"\nEnter the elements : ";
    for(int i=0 ; i<size ; i++)
    {
        cin>>array[i];
    }
    ptr=array;
    cout<<"Elements are : ";
    for(int i=0 ; i<size ; i++)
    {
        cout<<*ptr+i<<" ";
    }
}
